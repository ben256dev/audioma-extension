{
    "manifest_version": 3,
    "name": "Audioma",
    "version": "0.3.1",
    "description": "Primed Listening for YouTube and Netflix in Chrome and Firefox.",
    "permissions": [
        "storage"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{d6962e0c-a6eb-41b6-8209-19811d2777b9}",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    },
    "icons": {
        "16": "icons/audioma-16.png",
        "32": "icons/audioma-32.png",
        "48": "icons/audioma-48.png",
        "128": "icons/audioma-128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/audioma-16.png",
            "32": "icons/audioma-32.png",
            "48": "icons/audioma-48.png"
        },
        "default_title": "Subtitle helper"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.netflix.com/*",
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js",
                "overlay.js"
            ],
            "css": [
                "overlay.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/audioma-16.png",
                "icons/audioma-32.png",
                "icons/audioma-48.png",
                "icons/audioma-128.png"
            ],
            "matches": [
                "*://www.netflix.com/*",
                "*://www.youtube.com/*"
            ]
        }
    ]
}

